---
interface Props {
  id: string
  details: string | null 
  img: string
  success: boolean 
  flightNumber: number
}

const { success, flightNumber, img, id, details} = Astro.props
const sucessText = success ? "Ã‰xito": "Fracaso"


---
<div class="bg-green-100 rounded p-1">
  <a 
    href={`/launch/${id}`}
    class="rounded-lg border shadow-md bg-gray-800 border-gray-700 hover:scale-105 hover:bg-gray-700 hover:border-gray-500 transition grid grid-rows-2">
    <picture class="flex justify-center p-4">
      <img class="" src={img} alt={`Patch for launch ${id}`}>
    </picture>

    <header class="">
      <span
        class:list={[
            "text-md font-semibold m-auto   rounded flex justicy-center text-center",
            {
              "bg-green-200 text-green-900" : success,
              "bg-red-200 text-red-900" : !success,
            }
          ]}
      >
        {sucessText}
      </span>
      <h2 class="m-auto text-2xl font-bold tracking-tight text-white">Flight #{flightNumber}</h2>
      <p class="font-light text-gray-400">
        {details != null &&  details?.length >100 ? details.slice(0,100) + "..." : details != null  ? details.slice(0,100) + "..." : "Without details"}
      </p>
    </header>
  </a>
</div>



